cmake_minimum_required(VERSION 3.27)
# modify to your own nvcc path, or delete it if ok
project(MyReLU LANGUAGES CXX CUDA)

find_package(Python REQUIRED)

execute_process(
    COMMAND
        ${Python_EXECUTABLE} -c
            "import torch.utils; print(torch.utils.cmake_prefix_path)"
    OUTPUT_STRIP_TRAILING_WHITESPACE
    OUTPUT_VARIABLE DCMAKE_PREFIX_PATH)

set(CMAKE_PREFIX_PATH "${DCMAKE_PREFIX_PATH}")

find_package(Torch REQUIRED)
find_library(TORCH_PYTHON_LIBRARY torch_python PATHS "${TORCH_INSTALL_PREFIX}/lib")

# modify to your own python path, or delete it if ok
include_directories(/usr/include/python3.11)
include_directories(../include)

set(SRCS pytorch/relu.cpp kernel/relu.cu)
add_library(MyReLU SHARED ${SRCS})

target_link_libraries(MyReLU "${TORCH_LIBRARIES}" "${TORCH_PYTHON_LIBRARY}")